<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stvjuliengmail.smartmeds.activity.SearchActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_style">

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_Name"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_style">

            <TextView
                android:id="@+id/inscriptionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inscription"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_inscription"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_style">

            <TextView
                android:id="@+id/shapeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shape"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/shapeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:entries="@array/array_PillShapes" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_style"
            >

            <TextView
                android:id="@+id/colorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/colorSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:entries="@array/array_PillColors" />

        </TableRow>


        <TableRow
            android:id="@+id/tableButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_style"
            tools:ignore="InvalidId">
            <Button
                android:id="@+id/btnLoadList"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Load test \n list"
                app:layout_constraintBottom_toTopOf="@+id/recVwResultList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRxInfo" />

            <Button
                android:id="@+id/btnRxInfo"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_above="@+id/recVwResultList"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Simulate n selected item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </TableRow>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recVwResultList"
            android:layout_width="368dp"
            android:layout_height="234dp"
            android:layout_marginBottom="100dp"
            android:background="@color/gray_300"
            android:padding="16dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </TableLayout>







</android.support.constraint.ConstraintLayout>
