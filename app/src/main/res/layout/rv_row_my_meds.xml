<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_meds_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_my_meds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2.1dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPillImage"
            android:layout_width="31dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/no_img_avail" />
        <LinearLayout
            android:layout_weight="2"
            android:layout_marginLeft="8dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPillName"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_weight="2.5"
                android:text="Pill name here"
                android:textColor="@color/gray_500"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDirections"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_weight="2.6"
                android:text="Dosage here"
                android:textColor="@color/gray_500"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
